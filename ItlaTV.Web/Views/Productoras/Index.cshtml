@model IEnumerable<ItlaTV.Persistance.Models.dbo.ProductorasModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-primary text-center">🎬 Productoras</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Add Producer</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border rounded text-center h-100">
                
                <div class="d-flex justify-content-center">
                    <img class="img-fluid rounded-circle mt-3" src="@item.LogoURL" width="150" height="150" alt="Logo de @item.Nombre" />
                </div>

                <div class="card-body">
                    <h4 class="card-title fw-bold">@item.Nombre</h4>

                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.ProductoraID">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.ProductoraID">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProductoraID">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

