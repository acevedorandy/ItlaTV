@model ItlaTV.Persistance.Models.dbo.ProductorasModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-primary">✏️ Edit Productora</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded p-4">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ProductoraID" class="form-label fw-bold">🆔 ID de Productora</label>
                            <input asp-for="ProductoraID" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">🏭 Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LogoURL" class="form-label fw-bold">🖼 Logo</label>
                            <input asp-for="LogoURL" class="form-control" placeholder="URL del logo" oninput="previewLogo(this.value)" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">💾 Save</button>
                            <a asp-action="Index" class="btn btn-secondary">🔙 Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

