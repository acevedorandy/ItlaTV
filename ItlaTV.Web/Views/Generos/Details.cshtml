@model ItlaTV.Persistance.Models.dbo.GenerosModel

@{
    ViewData["Title"] = "Detalles del Género";
}

<h1 class="text-center text-primary">🎭 Género Details</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded p-4">
                <div class="card-body">
                    <h4 class="text-center text-secondary">Genero Details</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold text-secondary">🆔 ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.GeneroID)</dd>

                        <dt class="col-sm-4 fw-bold text-secondary">🏷 Nombre</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        @Html.ActionLink("✏️ Edit", "Edit", new { id = Model.GeneroID }, new { @class = "btn btn-warning px-4" })
                        <a asp-action="Index" class="btn btn-secondary">🔙 Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
