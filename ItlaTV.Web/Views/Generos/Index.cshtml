@model IEnumerable<ItlaTV.Persistance.Models.dbo.GenerosModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-primary text-center">🎬 Géneros</h1>

<p>
    <a asp-action="Create" class="btn btn-success"> Add Genre</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border rounded">
                <div class="card-body text-center">
                    <h4 class="card-title">@item.Nombre</h4>
                </div>

                <div class="d-flex justify-content-center gap-2 mb-3">
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.GeneroID">Edit</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.GeneroID">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.GeneroID">Delete</a>
                </div>

            </div>
        </div>
    }
</div>
