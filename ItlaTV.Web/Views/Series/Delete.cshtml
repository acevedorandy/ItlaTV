@model ItlaTV.Domain.Entities.dbo.Series

@{
    ViewData["Title"] = "Delete Serie";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0 text-center">Delete Serie</h4>
        </div>
        <div class="card-body">
            <h5 class="text-center text-danger">¿Estás seguro de que deseas eliminar esta serie?</h5>
            <hr />
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">ID:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SerieID)</dd>

                        <dt class="col-sm-4 font-weight-bold">Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 font-weight-bold">Imagen Portada:</dt>
                        <dd class="col-sm-8">

                            @if (Model != null && !string.IsNullOrEmpty(Model.ImagenPortada))
                            {
                                <img src="@Model.ImagenPortada" class="img-thumbnail" width="150" height="150" alt="Imagen Portada" />
                            }
                            else
                            {
                                <img src="/images/placeholder.png" class="img-thumbnail" width="150" height="150" alt="Imagen no disponible" />
                            }

                        </dd>

                        <dt class="col-sm-4 font-weight-bold">Enlace Video:</dt>
                        <dd class="col-sm-8">
                            <a href="@Model?.EnlaceVideo" target="_blank">@Model?.EnlaceVideo</a>
                        </dd>

                        <dt class="col-sm-4 font-weight-bold">Productora ID:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductoraID)</dd>

                        <dt class="col-sm-4 font-weight-bold">Género Primario:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.GeneroPrimarioID)</dd>

                        <dt class="col-sm-4 font-weight-bold">Género Secundario:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.GeneroSecundarioID)</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="SerieID" />
                <input type="hidden" asp-for="Nombre" />

                <button type="submit" class="btn btn-danger px-4">Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>
